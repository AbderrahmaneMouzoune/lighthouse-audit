{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
      "target": "es2017",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./build",
      "strict": true,
      "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules"]
}